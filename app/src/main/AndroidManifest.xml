<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.application.project2java.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/candeez"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project2Java"
        tools:targetApi="31">
        <activity
            android:name="com.application.project2java.activities.CartActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.project2java.activities.FavouritesActivity"
            android:exported="false" />
        <activity
            android:name="com.application.project2java.activities.ListActivity"
            android:exported="false"
            android:label="@string/title_activity_list"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Project2Java"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.application.project2java.activities.DetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.application.project2java.activities.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>