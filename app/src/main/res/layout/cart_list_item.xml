<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_cart_item_container"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_image_container"
                style="@style/display_card_default"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_weight=".4">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_cart_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ceiling_fan_test" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearlayout_cart_item_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                app:layout_constraintBottom_toBottomOf="@+id/product_description"
                app:layout_constraintTop_toTopOf="@+id/product_description"
                tools:layout_editor_absoluteY="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintlayout_item_amount_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="32dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_add_item"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:insetLeft="0dp"
                        app:icon="@drawable/ic_plus_box"
                        app:iconSize="40dp"
                        app:iconTint="@color/md_theme_light_tertiaryFixed"
                        app:layout_constraintStart_toEndOf="@id/text_item_amount"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Item 424"
                        android:textAlignment="viewStart"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toTopOf="@id/text_item_amount"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/text_item_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="64dp"
                        android:text="1"
                        android:textAlignment="center"
                        app:layout_constraintStart_toEndOf="@id/button_subtract_item"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_subtract_item"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:insetLeft="0dp"
                        app:icon="@drawable/ic_minus_box"
                        app:iconSize="40dp"
                        app:iconTint="@color/md_theme_light_tertiaryContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_remove_item"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:insetLeft="0dp"
                        app:icon="@drawable/ic_close"
                        app:iconSize="40dp"
                        app:iconTint="@color/md_theme_light_outline"
                        app:layout_constraintStart_toEndOf="@id/button_add_item"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="$69"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>