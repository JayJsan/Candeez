<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/display_card_default"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:layout_marginBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_item_image"
            style="@style/display_card_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight=".2">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableimage_item_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ceiling_fan_test" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/compact_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item #49"
                android:textColor="@color/md_theme_light_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/compact_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="$28" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/compact_button_view_item"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:enabled="false"
            android:insetLeft="0dp"
            app:icon="@drawable/baseline_navigate_next_24"
            app:iconSize="40dp"
            app:iconTint="@color/md_theme_light_primary" />

    </LinearLayout>


</androidx.cardview.widget.CardView>