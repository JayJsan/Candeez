<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_items_found"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_no_search_results"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="sad face"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_heart_broken_24"
            android:tint="@color/md_theme_light_outlineVariant" />

        <TextView
            android:id="@+id/text_no_search_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Favourites... Yet!"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_outlineVariant"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_no_search_results_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find some items to add"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_outlineVariant"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
